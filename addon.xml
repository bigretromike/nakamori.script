<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.nakamori" name="nakamori-script-module" version="3.0.0" provider-name="BigRetroMike, da3dsoul">
    <requires>
        <import addon="resource.images.nakamori" version="3.0.0"/>
        <!-- If I can't got around the wall, I go thru -->
        <import addon="script.module.pil"/>
        <!-- currently needed, but for how long we will see -->
        <import addon="script.module.kodi65" version="1.2.1"/>
        <!-- 2.25 is needed for routing -->
        <import addon="xbmc.python" version="2.25.0" />
        <import addon="script.module.routing" version="0.1.0"/>
    </requires>
	<extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
    <extension point="xbmc.python.pluginsource" library="plugin.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.python.module" library="lib" />
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">A Script for Nakamori addon</summary>
        <description lang="en">A Script for Nakamori addon</description>
        <website>https://shokunin.monogatari.pl/</website>
        <source>http://github.com/bigretromike/nakamori.script</source>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <news>
			v3.0.0 (2018-08-08)
            - modularization
        </news>
    </extension>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <screenshot></screenshot>
    </assets>
</addon>